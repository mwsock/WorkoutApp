<% include partials/header %>



<div class="wrktTbl">
        <h1 class="tblHdr">Cześć <%= user %>! Twój ostatni trening: </h1>
        

        <% if(typeof result._id === 'undefined' || result._id === null){ %>

          <h2>Brak zapisanych treningów!</h2>

        <%}else{%>

          <h3 class="tblHdr">Data: <%=wrktDate%></h3>
          <h2> Plan: <%=planName%> | Dzień Treningowy: <%=result.wlog["DzienTreningowy"] %> </h2>

      <table class="lastWrkt">
       
        <thead>
          <th  class="text-left">Nazwa Ćwiczenia</th>
          <!-- <th  class="text-left">Ilość Serii</th> -->
          <th  class="text-left">Ilość Powtórzeń</th>
          <th  class="text-left">Ciężar</th>
      </thead>

        <tbody class="table-hover">
          <% cwiczenia.forEach(function(cwiczenie){ %>
        <tr class="">  
          <td  class="text-left wrktInfo"><%= cwiczenie["Nazwa"] %></td>
          <!-- <td  class="text-left wrktInfo"><%= cwiczenie["Info"].length %></td> -->
          <td  class="text-left wrktInfo">
            <% cwiczenie["Info"].forEach(function(rep){ %>
            <li class='repList'> <%= rep['IloscPowtorzen'] %></li> 
            <%  })  %>
          </td>
          <td  class="text-left wrktInfo">
            <% cwiczenie["Info"].forEach(function(rep){ %>
            <li class='repList'> <%= rep['Ciezar'] %> kg</li> 
            <%  })  %>
        </td>
        </tr>
        <% }) %> 
      </tbody>

      </table>
    </div>
    <%};%>

   
<% include partials/footer %>
         