<% include partials/header %>

<h1>Twój ostatni trening: </h1>



<% result.forEach(function(column){ %>
  <table class="lastWrkt">
    <thead>
    <tr>
      <th>Data</th>
      <th>Nazwa treningu</th>
      <th>Rodzaj treningu</th>
      <th>Dzien Treningowy</th>
      <th>Nazwa Ćwiczenia</th>
      <th>Numer Serii</th>
      <th>Ilość Powtórzeń</th>
      <th>Ciężar</th>
    </tr>
  </thead>
  <tbody>
    <tr>  
      <td><%= column["Data"] %></td>
      <td><%= column["NazwaTreningu"] %></td>
      <td><%= column["RodzajTreningu"] %></td>
      <td><%= column["DzienTreningowy"] %></td>
      <td><%= column["NazwaCwiczenia"] %></td>
      <td><%= column["NumerSerii"] %></td>
      <td><%= column["IloscPowtorzen"] %></td>
      <td><%= column["Ciezar"] %></td>
    </tr>
  </tbody>
  </table>
  <% }) %> 

<p>Dodaj nowy trening:
  <form action="/addWrkt" method="POST">
    
    <select name="NazwaTreningu" id="">
      <option hidden disabled selected value> -- Wybierz... -- </option>
      <% result3.forEach(function(select){ %>
      <option><%= select["CUSTOM_NAME"] %></option>
      <% }) %> 
    </select>
    
    <select name="RodzajTreningu" id="">
      <option hidden disabled selected value> -- Wybierz... -- </option>
        <% result2.forEach(function(select){ %>
        <option><%= select["DTYPE"] %></option>
        <% }) %> 
       
    </select>
    <select name="DzienTreningowy" id="">
      <option hidden disabled selected value> -- Wybierz... -- </option>
      <option><%= %></option>
    </select>
    <select name="NazwaCwiczenia" id="">
      <option hidden disabled selected value> -- Wybierz... -- </option>
      <option><%= %></option>
    </select>
    <input type="number" name="NumerSerii" placeholder="Numer Serii" min="1" max="10">
    <input type="number" name="IloscPowtorzen" placeholder="Ilość Powtórzeń" min="1" max="100">
    <input type="number" name="Ciezar" placeholder="Ciężar" min="1" max="1000" step="0.25">
    <input type="submit" value="Dodaj">

  </form>
</p>    
<% include partials/footer %>
         
  